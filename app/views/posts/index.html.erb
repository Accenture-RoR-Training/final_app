<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text body</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td style="width: auto;"><%= post.title %></td>
        <td style="width: auto;"><%= post.text_body %></td>
        <td><%= link_to 'Show', post, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <td><%= link_to "Send Mail", send_email_path, class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-success" %>
